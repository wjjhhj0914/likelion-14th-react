{
  "private": true,
  "name": "react-jsx-syntax",
  "description": "JSX는 리액트에서 마크업을 설명하는데 널리 사용되는 구문입니다.",
  "version": "1.0.0",
  "scripts": {
    "start": "run-p watch serve",
    "serve": "bunx live-server --host=localhost --port=3000 --no-browser",
    "transpile": "babel src --out-dir assets/scripts",
    "watch": "bun transpile --watch",
    "build": "run-s clean bundle",
    "bundle": "bun build index.html --minify --splitting --outdir dist",
    "clean": "rimraf -rf dist"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}